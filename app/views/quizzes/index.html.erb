<h1>Listing quizzes</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Header url</th>
    <th>Badge url</th>
    <th>Source url</th>
    <th>Ad url</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @quizzes.each do |quiz| %>
  <tr>
    <td><%= quiz.title %></td>
    <td><%= quiz.header_url %></td>
    <td><%= quiz.badge_url %></td>
    <td><%= quiz.source_url %></td>
    <td><%= quiz.ad_url %></td>
    <td><%= link_to 'Show', quiz %></td>
    <td><%= link_to 'Edit', edit_quiz_path(quiz) %></td>
    <td><%= link_to 'Destroy', quiz, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

